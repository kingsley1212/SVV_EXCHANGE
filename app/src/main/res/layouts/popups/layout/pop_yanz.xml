<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="?attr/pop_touming"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:background="?attr/mf_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_method"
                android:textColor="?attr/text_white_hei2"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="@string/anquan_yanz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_quxiao"
                android:textColor="?attr/text_white_hei2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:text="@string/dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
        </RelativeLayout>
        <View
           style="@style/divider_line"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_verify_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/mf_item_bg"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_get_check_code"
                android:gravity="center"
                android:text="@string/login_get_checkcode"
                android:textColor="#ff4a7cf6"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_send_code"
                android:background="@null"
                android:hint="@string/assat29"
                android:inputType="number"
                android:textColor="?attr/mt_title_tc"
                android:textColorHint="@color/c_text_hint_color"
                android:textSize="14sp"/>

        </RelativeLayout>
        <View
            android:visibility="gone"
            android:id="@+id/view_phone"
            style="@style/divider_line"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_email_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/mf_item_bg"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView
                android:id="@+id/tv_send_email_code"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_get_check_code"
                android:gravity="center"
                android:text="@string/login_get_checkcode"
                android:textColor="#ff4a7cf6"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/et_email_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_send_email_code"
                android:background="@null"
                android:hint="@string/assat30"
                android:inputType="number"
                android:textColor="?attr/mt_title_tc"
                android:textColorHint="@color/c_text_hint_color"
                android:textSize="14sp"/>

        </RelativeLayout>
        <View
            android:visibility="gone"
            android:id="@+id/view_email"
            style="@style/divider_line"/>
        <EditText
            android:visibility="gone"
            android:id="@+id/et_google"
            android:textColor="?attr/mt_title_tc"
            android:textColorHint="@color/c_text_hint_color"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="15sp"
            android:hint="@string/google9"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"/>
        <View
            android:visibility="gone"
            android:id="@+id/view_google"
            style="@style/divider_line"/>
        <TextView
            android:layout_marginBottom="20dp"
            android:id="@+id/tv_quren"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/c_white"
            android:background="@color/c_2459e5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:text="@string/addpay_bank_queren"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
