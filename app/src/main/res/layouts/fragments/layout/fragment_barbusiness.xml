<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg_color"
    android:orientation="vertical"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/main_bg_color"
            app:contentScrim="?attr/main_bg_color">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:collapsedTitleGravity="right"
                app:expandedTitleGravity="center"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cb_center_bg"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="?attr/cb_title_bg"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_menu"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="?attr/mune_pic"/>

                            <TextView
                                android:id="@+id/tv_market_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textColor="?attr/nonmal_tc_1"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/coinbusiness_return"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="10dp"
                                android:src="@drawable/selector_coinbusiness_return"
                                android:visibility="gone"/>

                            <ImageView
                                android:id="@+id/coinbusiness_save"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="10dp"
                                android:src="?attr/collect"/>

                            <ImageView
                                android:id="@+id/coinbusiness_market"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="10dp"
                                android:src="@drawable/selector_coinbusiness_market"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_buy_coin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/data_defult"
                                android:textColor="@color/c_text_normal"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_buy_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/barbusinessfragment_coin1"
                                android:textColor="@color/c_text_slight"
                                android:textSize="12sp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_risk_rote"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/barbusinessfragment_risk_probability"
                                    android:textColor="#ffc3c3c3"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginLeft="3dp"
                                    android:background="@drawable/shape_circle"
                                    android:gravity="center"
                                    android:text="？"
                                    android:textColor="@color/c_white"
                                    android:textSize="8sp"
                                    android:visibility="gone"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_sell_coin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/data_defult"
                                android:textColor="@color/c_text_normal"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tv_sell_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/barbusinessfragment_coin2"
                                android:textColor="@color/c_text_slight"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/data_defult"
                                android:textColor="@color/c_text_normal"
                                android:textSize="14sp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="@string/barbusinessfragment_storage_price"
                                android:textColor="@color/c_text_slight"
                                android:textSize="12sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:background="?attr/main_bg_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="2">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <View
                                        android:id="@+id/coinBusinessBuy_line"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_alignParentBottom="true"
                                        android:background="#ff01cb8f"
                                        android:visibility="gone"/>

                                    <TextView
                                        android:id="@+id/coinBusinessBuy_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/coinbusinessfragment_buy"
                                        android:textColor="@drawable/selector_coinbusiness_buy"
                                        android:textSize="18sp"
                                        android:textStyle="bold"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <View
                                        android:id="@+id/coinBusinessSell_line"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_alignParentBottom="true"
                                        android:background="#ffff5b4b"
                                        android:visibility="gone"/>

                                    <TextView
                                        android:id="@+id/coinBusinessSell_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/coinbusinessfragment_sell"
                                        android:textColor="@drawable/selector_coinbusiness_sell"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        />

                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/ll_xj"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/stype_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/coinbusinessfragment_type1"
                                        android:textColor="@color/c_text_slight"
                                        android:textSize="14sp"/>

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_marginLeft="5dp"
                                        android:src="@mipmap/ic_triangle"/>
                                </LinearLayout>
                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp">

                                <LinearLayout
                                    android:id="@+id/ll_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/cb_center_stroke_1"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/tv_my_price"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3"
                                        android:background="@null"
                                        android:gravity="center"
                                        android:inputType="numberDecimal"
                                        android:textColor="?attr/nonmal_tc_2"
                                        android:textSize="12sp"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="?attr/linecolor_3"/>

                                    <TextView
                                        android:id="@+id/min_amount_tv"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:layout_weight="1"
                                        android:background="?attr/cb_center_selector_1"
                                        android:gravity="center"
                                        android:text="@string/ys_min"
                                        android:textColor="?attr/nonmal_tc_2"
                                        android:textSize="22sp"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="15dp"
                                        android:layout_marginTop="15dp"
                                        android:background="?attr/linecolor_2"/>

                                    <TextView
                                        android:id="@+id/add_amount_tv"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="2dp"
                                        android:layout_weight="1"
                                        android:background="?attr/cb_center_selector_1"
                                        android:gravity="center"
                                        android:text="@string/ys_plus"
                                        android:textColor="?attr/nonmal_tc_2"
                                        android:textSize="22sp"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/usesj_tx"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_stroke_2"
                                    android:gravity="center"
                                    android:text="@string/business_zuiyoujia"
                                    android:textColor="@color/c_ffffff"
                                    android:textSize="16sp"
                                    android:visibility="gone"
                                    />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/about_rmb_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="≈"
                                android:textColor="?attr/nonmal_tc_3"
                                android:textSize="11sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="?attr/cb_center_stroke_1">

                                <TextView
                                    android:id="@+id/coin_util_tx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="@string/coinbusinessfragment_count"
                                    android:textColor="?attr/nonmal_tc_2"
                                    android:textSize="16sp"/>

                                <EditText
                                    android:id="@+id/tv_my_num"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.4"
                                    android:background="@null"
                                    android:gravity="center_vertical|right"
                                    android:inputType="numberDecimal"
                                    android:textColor="?attr/nonmal_tc_2"
                                    android:textSize="12sp"
                                    />

                                <TextView
                                    android:id="@+id/coin_util_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="@string/data_defult"
                                    android:textColor="?attr/nonmal_tc_2"
                                    android:textSize="16sp"/>


                            </LinearLayout>

                            <com.svv.jys.code.common.view.selfview.MProgressView
                                android:id="@+id/mProgressView"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:visibility="visible"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/fivePointLeftText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/c_c3c3c3"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/fivePointRightText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:ellipsize="end"
                                    android:maxLength="8"
                                    android:text="@string/data_defult"
                                    android:textColor="@color/c_c3c3c3"
                                    android:textSize="12sp"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/jyetx_re"
                                android:layout_width="186dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/jyetx_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:text="@string/coinbusinessfragment_business_count"
                                    android:textColor="?attr/jiyi"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/jye_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="5dp"
                                    android:maxLines="1"
                                    android:gravity="right"
                                    android:ellipsize="end"
                                    android:layout_toRightOf="@id/jyetx_tv"
                                    android:textColor="@color/c_c3c3c3"
                                    android:textSize="12sp"
                                    />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/barbusiness_buyorsell"
                                android:layout_width="186dp"
                                android:layout_height="44dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="16dp"
                                android:background="#ff01cb8f"
                                android:gravity="center"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="@string/coinbusinessfragment_buy"
                                android:textColor="@color/c_white"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <include layout="@layout/item_pankou_title"/>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                >

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rvCoinType3List"
                                    android:layout_width="match_parent"
                                    android:layout_height="160dp"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#0Fff595d"
                                    />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/marketnp_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/data_defult"
                                android:textColor="#ffff5646"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:id="@+id/fprice_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:textColor="#ffc3c3c3"
                                android:textSize="11sp"/>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                >

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rvCoinType4List"
                                    android:layout_width="match_parent"
                                    android:layout_height="160dp"
                                    />


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#0F01cb8f"
                                    />

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/coinbusinessfragment_business_count_deep"
                                    android:textColor="@color/c_text_slight"
                                    android:textSize="14sp"/>

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    android:src="@mipmap/ic_triangle"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        style="@style/divider_line"
                        android:layout_marginTop="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="?attr/main_bg_color"/>

                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

            <RelativeLayout
                android:id="@+id/rl_weituo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/cb_center_bg"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/coinbusinessfragment_business_delegate"
                    android:textColor="?attr/jiyi"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/showtradetype_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/ic_order"/>

                    <TextView
                        android:id="@+id/showtradetype_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/coinbusinessfragment_business_all"
                        android:textColor="#ffc3c3c3"
                        android:textSize="13sp"/>
                </LinearLayout>
            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/fl_weituo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvDelegate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nsv">
                <include
                    android:id="@+id/no_data_ly"
                    layout="@layout/include_nodata" />
            </android.support.v4.widget.NestedScrollView>

        </FrameLayout>


    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>