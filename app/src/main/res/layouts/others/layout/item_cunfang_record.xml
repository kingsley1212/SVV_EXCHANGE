<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/c_ffffff"
    android:layout_height="wrap_content"
    android:padding="14dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/c_999999"
            android:text="@string/suocang_coin"/>
        <TextView
            android:id="@+id/tv_cf_record_coin"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/c_999999"
            android:text="@string/rocord_num"/>
        <TextView
            android:id="@+id/tv_cf_record_num"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/c_999999"
            android:text="@string/suocang_num"/>
        <TextView
            android:id="@+id/tv_sy_record_coin"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/c_999999"
            android:text="@string/suocang_tv2"/>
        <TextView
            android:id="@+id/tv_cf_record_yg"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/c_999999"
            android:text="@string/yifan_lixi"/>
        <TextView
            android:id="@+id/tv_cf_record_yf"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/c_999999"
            android:text="@string/cunru_time"/>
        <TextView
            android:id="@+id/tv_cf_record_cun_time"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/c_999999"
            android:text="@string/zhouqi"/>
        <TextView
            android:id="@+id/tv_cf_record_zhouqi"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/c_999999"
            android:text="@string/fanli_time"/>
        <TextView
            android:id="@+id/tv_cf_record_fan_time"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/c_999999"
            android:text="@string/zhuangtai"/>
        <TextView
            android:textColor="#f4c645"
            android:id="@+id/tv_cf_record_status"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
