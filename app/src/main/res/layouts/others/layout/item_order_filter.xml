<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/c_ffffff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/c_1a456d"
        android:text="@string/pop_entrust_jiaoyiduoi"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/coin_et"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/border_8f9ba2"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="12sp"
            android:textColorHint="@color/c_8f9ba2"
            android:hint="@string/invite_tv2"
            android:textColor="@color/c_1a456d"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            android:textColor="@color/c_8f9ba2"/>
        <RelativeLayout
            android:id="@+id/select_rl"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/border_8f9ba2"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <TextView
                android:id="@+id/exchange_b_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/c_1a456d"
                android:textColorHint="@color/c_8f9ba2"
                android:hint="@string/pop_entrust_danwei"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/drop_iv"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:src="@drawable/selector_drop"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <GridView
        android:id="@+id/coin_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="80dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/c_1a456d"
        android:text="@string/pop_entrust_order_status"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:id="@+id/buy_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_screen"
            android:gravity="center"
            android:text="@string/tradechat_buy"
            android:textColor="@drawable/text_selector_screen"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/sell_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/selector_screen"
            android:gravity="center"
            android:text="@string/tradechat_sell"
            android:textColor="@drawable/text_selector_screen"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/reset_tv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/c_9fb8cf"
            android:textSize="17sp"
            android:textColor="@color/c_ffffff"
            android:gravity="center"
            android:text="@string/pop_entrust_zhongzhi"/>

        <TextView
            android:id="@+id/commit_tv"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_screen"
            android:textSize="17sp"
            android:textColor="@color/c_ffffff"
            android:gravity="center"
            android:text="@string/pop_entrust_queren"/>

    </LinearLayout>

</LinearLayout>