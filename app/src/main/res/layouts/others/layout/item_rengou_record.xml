<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_rengou_coin"
            android:textColor="@color/c_1a456d"
           android:layout_marginLeft="17dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_rengou_time"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_rengou_coin"
           android:textColor="#8a8a8a"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_rengou_statas"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            android:textColor="@drawable/selector_rengou_statas"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
      style="@style/divider_line"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_rengou_nuk_weizi"
            android:textColor="@color/c_1a456d"
            android:layout_marginLeft="32dp"
            android:textSize="14sp"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_rengou_record_num"
            android:textColor="@color/c_1a456d"
            android:text="10000000000"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shiji_rengou_weizi"
            android:textColor="@color/c_1a456d"
            android:layout_marginLeft="32dp"
            android:textSize="14sp"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_rengou_record_shiji_num"
            android:textColor="@color/c_1a456d"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:textColor="@color/c_1a456d"
            android:layout_marginLeft="32dp"
            android:text="@string/dongjie_jine"
            android:textSize="14sp"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_rengou_record_dongji"
            android:textColor="@color/c_1a456d"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/c_1a456d"
            android:layout_marginLeft="32dp"
            android:text="@string/sxf"
            android:textSize="14sp"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_rengou_record_sxf"
            android:textColor="@color/c_1a456d"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/view4"
        android:layout_marginTop="10dp"
        style="@style/divider_line"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/chexiao"
        android:id="@+id/tv_rengou_chexiao"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:textColor="@color/c_0296ff"
        android:layout_marginLeft="16dp"
        android:layout_gravity="right"
        android:textSize="13sp"
        android:layout_width="40dp"
        android:layout_height="20dp" />
</LinearLayout>
