<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="139dp"
    android:background="@mipmap/bg_bank_1"
    android:gravity="clip_horizontal"
    android:orientation="vertical"
    android:paddingLeft="39dp"
    android:paddingTop="5dp"
    android:paddingRight="30dp"
    android:id="@+id/bank_ll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/ic_pay_bank"/>
        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/c_ffffff" />
        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="55dp"
            android:layout_height="26dp"
            android:background="@drawable/border_f7f9ff"
            android:text="@string/PayMethedAct_delete"
            android:gravity="center"
            android:textColor="@color/c_ffffff"
            android:textSize="13sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bank_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/c_ffffff"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:ellipsize="end"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_bank_nicname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_ffffff"
            android:textSize="13sp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/c_ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/tv_bank_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/c_ffffff"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
