<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="30dp"
    android:layout_marginTop="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/coin_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/coin_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/c_1a456d" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/price"
            android:textColor="@color/c_8f9ba2"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coin_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textColor="@color/c_8f9ba2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/limit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:text=""
                android:textColor="@color/c_8f9ba2"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_bank"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="13dp"
                    android:src="@mipmap/pay_unionpay_icon" />

                <ImageView
                    android:id="@+id/iv_alipay"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="13dp"
                    android:src="@mipmap/pay_zhifubao_icon" />

                <ImageView
                    android:id="@+id/iv_wechat"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="13dp"
                    android:src="@mipmap/pay_weichat_pay" />

                <ImageView
                    android:id="@+id/iv_cash"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="13dp"
                    android:src="@mipmap/pay_fastpay_icon" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_2183c9"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/currency_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/price_tv"
                android:layout_alignBaseline="@id/price_tv"
                android:textSize="14sp"
                android:textColor="@color/c_2183c9"
                android:text=""/>
            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_universal"
                android:gravity="center"
                android:text="@string/assat39"
                android:textColor="@color/c_white"
                android:textSize="16sp"
                android:layout_below="@id/price_tv"
                android:layout_alignRight="@id/currency_tv"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_adv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="?attr/text_white_hei2"
            android:textSize="15sp" />
    </RelativeLayout>



</LinearLayout>
