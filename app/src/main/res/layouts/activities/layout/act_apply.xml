<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">
    <include layout="@layout/include_new_top_bar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <TextView
                android:id="@+id/info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c_1a456d"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />
            <LinearLayout
                android:id="@+id/web_content_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/xy_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                   >
                    <CheckBox
                        android:id="@+id/check"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/selector_lcheckbox"
                        android:button="@null"
                        android:checked="false"
                        android:clickable="false"
                        android:focusable="false"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_1a456d"
                        android:text="@string/apply_tv1"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/xy_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0894ec"
                        android:text="@string/apply_tv2"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/apply_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="@string/menu_tv3"
                    android:textColor="@color/c_ffffff"
                    android:background="@drawable/selector_commonbutton"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>