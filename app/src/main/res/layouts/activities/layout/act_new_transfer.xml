<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_jys"
    android:paddingLeft="15dp"
    android:paddingRight="15sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/titlebar_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/leftImg_ly"
                    android:layout_width="50dp"
                    android:layout_height="44dp">

                    <ImageView
                        android:id="@+id/leftImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/ic_arrow_left" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/record_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@mipmap/ic_record"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

           


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:minEms="2"
                android:maxEms="9"
                android:textColor="@color/c_1a456d"
                android:textSize="25sp"
                android:layout_marginTop="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_transfer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_transfer_icon1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/from"
                        android:textColor="@color/c_6e7797" />

                    <TextView
                        android:id="@+id/account_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/myassetact_tv1"
                        android:textColor="@color/c_1a456d" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/c_8f9ba2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/arrive"
                        android:textColor="@color/c_6e7797" />

                    <TextView
                        android:id="@+id/account_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/myassetact_tab3"
                        android:textColor="@color/c_1a456d" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/change_ll"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="1px"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_transfer_btn" />
            </LinearLayout>
        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/myassetact_list_item1"
            android:textColor="@color/c_8f9ba2"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/choose_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/coin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/c_1a456d" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_arrowright" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/coin_tv"
                android:layout_marginTop="10dp"
                android:background="@color/line_color1" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/num"
            android:textColor="@color/c_8f9ba2"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/transfer_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/c_transparent"
                    android:textSize="14sp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/c_1a456d"
                    android:textColorHint="@color/c_bbcce1"
                    android:inputType="numberDecimal"
                    android:hint="@string/myassetact_tv2"
                    />
                <TextView
                    android:id="@+id/coin_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c_1a456d"/>
                <View
                    android:layout_width="1px"
                    android:layout_height="12dp"
                    android:background="@color/c_1a456d"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"/>
                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/business_trade_all"
                    android:textColor="@color/c_1a456d"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/coin_tv"
                android:background="@color/line_color1" />
            <TextView
                android:id="@+id/abel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/c_8f9ba2"
                android:layout_marginTop="15dp"
                android:text=""/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/addpay_bank_psw"
                android:textColor="@color/c_8f9ba2"
                android:textSize="13sp" />

            <EditText
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/c_transparent"
                android:textSize="14sp"
                android:textColor="@color/c_1a456d"
                android:textColorHint="@color/c_bbcce1"
                android:inputType="textPassword"
                android:hint="@string/addpay_bank_et_psw"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_ffffff"
            android:layout_gravity="center"
            android:textColor="@color/c_8f9ba2"
            android:text="@string/myassetact_tv4"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_login_selector"
            android:text="@string/dialog_commit"
            android:layout_gravity="center"
            android:textColor="@color/c_ffffff"
            android:gravity="center"
            android:textSize="16sp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>