<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/main_bg_color">
    <include layout="@layout/include_top_title_bar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/c_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/c_8f9ba2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/google1"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/c_white"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:text="1"
                        android:background="@drawable/google_yuan"/>
                    <TextView
                        android:textColor="@color/c_1a456d"
                        android:layout_marginLeft="3dp"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/google5"/>
                </LinearLayout>

                <TextView
                    android:textColor="@color/c_8f9ba2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/google2"/>
                <View style="@style/divider_line"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/c_white"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:text="2"
                        android:background="@drawable/google_yuan"/>
                    <TextView
                        android:textColor="@color/c_1a456d"
                        android:layout_marginLeft="3dp"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/google6"/>
                </LinearLayout>
                <TextView
                    android:textColor="@color/c_8f9ba2"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/google3"/>
                <TextView
                    android:textColor="#4a7cf6"
                    android:textSize="15sp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/google4"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:id="@+id/google_rwcode"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitXY" />
                    <TextView
                        android:textColor="@color/c_1a456d"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tv_miyao"
                        android:layout_toRightOf="@id/google_rwcode"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/c_1a456d"
                        android:textSize="15dp"
                        android:layout_marginLeft="8dp"
                        android:layout_above="@id/tv_miyao"
                        android:layout_toRightOf="@id/google_rwcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/google8"/>
                    <TextView
                        android:id="@+id/tv_fuzhi"
                        android:textSize="15dp"
                        android:textColor="#4a7cf6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/tv_miyao"
                        android:text="@string/create_copy"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <View style="@style/divider_line"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="16sp"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/c_white"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:text="3"
                        android:background="@drawable/google_yuan"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/c_1a456d"
                        android:layout_marginLeft="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/google7"/>
                </LinearLayout>

                <EditText
                    android:textColor="@color/c_1a456d"
                    android:textColorHint="@color/c_8f9ba2"
                    android:inputType="number"
                    android:id="@+id/et_google_code"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/google9"/>

            </LinearLayout>

            <TextView
                android:background="@drawable/btn_login_selector"
                android:layout_marginTop="30dp"
                android:id="@+id/tv_bind_google"
                android:layout_marginBottom="15dp"
                android:textColor="@color/c_white"
                android:layout_alignParentBottom="true"
                android:text="@string/google10"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
