<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/c_white"
        android:orientation="vertical">

      <!--  <View
            style="@style/divider_line_horizontal_nocolor"
            android:background="?attr/linecolor_1"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tab1_ly"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab1_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_tab_1"/>

                <TextView
                    android:id="@+id/tab1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainact_tab1"
                    android:textColor="@drawable/selector_tab_text"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab2_ly"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab2_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_tab_2"/>

                <TextView
                    android:id="@+id/tab2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainact_tab2"
                    android:textColor="@drawable/selector_tab_text"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab3_ly"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab3_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_tab_3"/>

                <TextView
                    android:id="@+id/tab3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainact_tab3"
                    android:textColor="@drawable/selector_tab_text"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/tab6_ly"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab6_img"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="?attr/fabi"/>

                <TextView
                    android:id="@+id/tab6_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainact_tab6"
                    android:textColor="#707698"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab4_ly"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab4_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_tab_4"/>

                <TextView
                    android:id="@+id/tab4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainact_tab4"
                    android:textColor="@drawable/selector_tab_text"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab5_ly"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab5_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_tab_5"/>

                <TextView
                    android:id="@+id/tab5_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainact_tab5"
                    android:textColor="@drawable/selector_tab_text"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_ly">
        <FrameLayout
            android:id="@+id/fragment_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_ceshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/c_ffffff"
            android:padding="5dp"
            android:text="@string/mainact_test_system"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
           />

    </FrameLayout>


</RelativeLayout>
