<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"

    android:orientation="vertical"
    android:background="@color/c_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">
                <EditText
                    android:inputType="numberDecimal|number"
                    android:id="@+id/et_pop_money"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:hint="@string/pop_money_tishi"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_money"/>
                <TextView
                    android:id="@+id/tv_pop_comfir"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textColor="@color/c_white"
                    android:text="@string/shaishuna"
                    android:background="@drawable/shape_titlebar_gradient"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
        </LinearLayout>
       <RelativeLayout
           android:visibility="gone"
           android:background="#22888888"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/rl_pop2"></RelativeLayout>

</LinearLayout>
