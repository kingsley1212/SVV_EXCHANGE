<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_jys"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/c_ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/leftImg_ly"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_left" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/c_1a456d"
            android:textSize="18sp" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/c2c_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:id="@+id/coin_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="@string/invite_tv2"
                        android:textColor="@color/c_1a456d" />

                    <TextView
                        android:id="@+id/coin_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/c_8f9ba2" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_drop_down" />
                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/line_color1" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_type"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="@string/countdetailact_item_type"
                        android:textColor="@color/c_1a456d" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/subscription"
                        android:textColor="@color/c_8f9ba2" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_drop_down" />
                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/line_color1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/buy_price_tv"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="@string/subscription_price"
                        android:textColor="@color/c_1a456d" />

                    <TextView
                        android:id="@+id/price_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textColor="@color/c_ff0000" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/line_color1" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="15dp">

                    <TextView
                        android:text="1 USDT å…‘"
                        android:id="@+id/tv_memo"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_1a456d" />

                    <TextView
                        android:id="@+id/tv_memo_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                        android:textColor="@color/c_1a456d" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/line_color1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="15dp"

                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/buy_num_tv"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="@string/subscription_num"
                        android:textColor="@color/c_1a456d" />

                    <EditText
                        android:id="@+id/buy_num_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/c_transparent"
                        android:inputType="numberSigned|numberDecimal"
                        android:maxLength="14"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textColor="@color/c_1a456d"
                        android:textColorHint="@color/c_8f9ba2"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/line_color1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/zhehe_tv"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zhehe_usdt"
                        android:textColor="@color/c_1a456d" />

                    <TextView
                        android:id="@+id/tv_zhehe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textColor="@color/c_ff0000" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/line_color1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"

                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/safe_tv"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="@string/address_psw"
                        android:textColor="@color/c_1a456d" />

                    <EditText
                        android:id="@+id/safe_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/c_transparent"
                        android:hint="@string/address_et_psw"
                        android:inputType="textPassword"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textColor="@color/c_1a456d"
                        android:textColorHint="@color/c_8f9ba2"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/line_color1" />
                <!--android:background="@drawable/selector_fabi_buy_sell"-->
                <TextView
                    android:id="@+id/buy_btn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="65dp"
                    android:background="@drawable/btn_universal"
                    android:gravity="center"
                    android:text="@string/coinbusinessfragment_buy"
                    android:textColor="@color/c_ffffff"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/C2CTradeAct_transaction_record"
                    android:textColor="@color/c_1a456d"
                    android:textSize="16sp" />

                <include
                    android:id="@+id/no_data"
                    layout="@layout/include_nodata" />

                <com.jcodecraeer.xrecyclerview.XRecyclerView
                    android:id="@+id/transfer_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                </com.jcodecraeer.xrecyclerview.XRecyclerView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>