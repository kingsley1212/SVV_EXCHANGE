<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/c_white"
    android:layout_height="match_parent">
    <include layout="@layout/include_top_title_bar"/>
    <TextView
        android:id="@+id/tv_pay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_zfb_title"
        android:textSize="24sp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c_1a456d"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myaddressact_item1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c_8f9ba2"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/et_pay_name"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColorHint="@color/c_bbcce1"
        android:textColor="@color/c_1a456d"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="@string/add_pay_name"
        android:textSize="16sp"/>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_dcedfd"/>
    <TextView
        android:id="@+id/tv_payment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_zfb_account"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c_8f9ba2"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/et_pay_zhanghao"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColorHint="@color/c_bbcce1"
        android:textColor="@color/c_1a456d"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="@string/add_zfb_hint"
        android:textSize="16sp"/>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_dcedfd"/>
    <TextView
        android:id="@+id/tv_pay_name_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_zfb_qr_code"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c_8f9ba2"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/iv_pay_code"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@mipmap/ic_add_pay_code"/>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/btn_universal"
            android:gravity="center"
            android:text="@string/add_pay"
            android:textColor="@color/c_ffffff" />
    </LinearLayout>


</LinearLayout>
