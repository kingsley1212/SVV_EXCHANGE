<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_2183c9"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_entrust_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/entrust_chexiao"
            android:textColor="#ff2459e5"
            android:textSize="11sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_entrust_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tag_tv"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_entrust_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/tag_tv"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_entrust_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tag_tv"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_entrust_yijiaoyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tag_tv"
            android:layout_alignParentRight="true"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_entrust_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tag_tv"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_entrust_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/tag_tv"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_entrust_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/tag_tv"
        android:textSize="12sp"/>

    <View  android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color1"/>
</LinearLayout>
