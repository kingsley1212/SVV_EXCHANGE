<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/c_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/leftImg_ly"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/leftImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/ic_arrow_left" />
        </RelativeLayout>
        <TextView
            android:layout_marginBottom="15dp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/c_1a456d"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_psw_type"
        android:background="@color/c_white"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="@string/security_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/c_1a456d"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_psw_type"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_choose"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_psw_type1"
        android:background="@color/c_white"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="@string/security_verification2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/c_1a456d"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_psw_type1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_choose"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_psw_type2"
        android:background="@color/c_white"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="@string/security_verification3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/c_1a456d"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_psw_type2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_choose"/>
    </RelativeLayout>
</LinearLayout>
