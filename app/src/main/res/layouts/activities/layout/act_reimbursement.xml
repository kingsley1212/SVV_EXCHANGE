<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/main_bg_color">
    <include layout="@layout/include_top_title_bar"/>

    <RelativeLayout
        android:paddingTop="10dp"
        android:background="?attr/mf_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:layout_marginLeft="16dp"
            android:id="@+id/tv_total_borrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_borrow_lixi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="?attr/mf_item_bg"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:layout_marginLeft="16dp"
            android:id="@+id/tv_yihuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_borrow_shengyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:paddingTop="10dp"
        android:background="?attr/mf_item_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:background="@null"
            android:textColor="?attr/mt_title_tc"
            android:textColorHint="@color/c_d5d5d5"
            android:id="@+id/et_reimburment_num"
            android:inputType="numberDecimal|number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/assat9"
            android:textSize="14sp"
            android:paddingLeft="16dp"/>
        <View style="@style/divider_line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>



    <EditText
        android:textColor="?attr/mt_title_tc"
        android:textColorHint="@color/c_d5d5d5"
        android:id="@+id/et_reimburment_psw"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/mf_item_bg"
        android:hint="@string/safepsw6"
        android:textSize="14sp"
        android:paddingLeft="16dp"/>
    <View style="@style/divider_line"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tv_reimburment_confir"
        android:layout_marginBottom="15dp"
        android:background="?attr/btn_bg"
        android:textColor="@color/c_white"
        android:text="@string/assat8"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />

</LinearLayout>
