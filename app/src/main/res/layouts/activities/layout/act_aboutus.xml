<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_background"
    android:orientation="vertical">

    <include layout="@layout/include_top_title_bar" />

    <RelativeLayout style="@style/item_style">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/aboutus_item1"
            android:textColor="@color/c_text_thick"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="——"
            android:textColor="@color/c_text_normal"
            android:textSize="13sp" />
    </RelativeLayout>

    <View style="@style/divider_line" />

    <RelativeLayout style="@style/item_style">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/aboutus_item2"
            android:textColor="@color/c_text_thick"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="——"
            android:textColor="@color/c_text_normal"
            android:textSize="13sp" />
    </RelativeLayout>

    <View style="@style/divider_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/aboutus_content"
            android:textColor="@color/c_text_normal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>
