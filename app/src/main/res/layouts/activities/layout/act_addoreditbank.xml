<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_new_top_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:text="@string/AddorEditBankAct_remark_name"
            android:textColor="@color/c_8f9ba2"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:hint="@string/AddorEditBankAct_remark_name_hint"
                android:textColor="@color/c_1a456d"
                android:textColorHint="@color/c_bbcce1"
                android:background="@color/c_transparent"
                android:textSize="12sp" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/AddorEditBankAct_bank_name"
            android:textColor="@color/c_8f9ba2"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:background="@color/c_transparent"
                android:id="@+id/et_bankname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:hint="@string/AddorEditBankAct_bank_name_hint"
                android:textColor="@color/c_1a456d"
                android:textColorHint="@color/c_bbcce1"
                android:textSize="12sp" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/AddorEditBankAct_bank_address"
            android:textColor="@color/c_8f9ba2"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:background="@color/c_transparent"
                android:id="@+id/et_khh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:hint="@string/AddorEditBankAct_bank_address_hint"
                android:textColor="@color/c_1a456d"
                android:textColorHint="@color/c_bbcce1"
                android:textSize="12sp" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/AddorEditBankAct_bank_cart"
            android:textColor="@color/c_8f9ba2"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:background="@color/c_transparent"
                android:id="@+id/et_bankno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:hint="@string/AddorEditBankAct_bank_cart_hint"
                android:textColor="@color/c_1a456d"
                android:textSize="12sp"
                android:textColorHint="@color/c_bbcce1"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/AddorEditBankAct_bank_user"
            android:textColor="@color/c_8f9ba2"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:background="@color/c_transparent"
                android:id="@+id/et_khxm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColorHint="@color/c_bbcce1"
                android:hint="@string/AddorEditBankAct_bank_user_hint"
                android:textColor="@color/c_1a456d"
                android:textSize="12sp" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color1"/>
        <TextView
            android:id="@+id/commit_tv"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_login_selector"
            android:gravity="center"
            android:text="@string/AddorEditBankAct_commint"
            android:textColor="@color/c_ffffff"
            android:textSize="13sp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</LinearLayout>





</android.support.v4.widget.NestedScrollView>