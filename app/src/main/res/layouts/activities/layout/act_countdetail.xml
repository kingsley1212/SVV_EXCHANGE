<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/bottom_transfer_ly"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View style="@style/divider_line" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_borrowing"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center_vertical"
                android:layout_width="131dp"
                android:layout_height="44dp"
                android:background="@drawable/shape_myasset_btn1"
                android:gravity="center"
                android:text="@string/countdetail_jie"
                android:textColor="@color/c_white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_transfer"
                android:layout_gravity="center_vertical"
                android:layout_width="131dp"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_myasset_btn2"
                android:gravity="center"
                android:text="@string/countdetail_hua"
                android:textColor="@color/c_white"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/ll_to_lt_trade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:src="@mipmap/ic_transfer_icon1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/countdetailact_btn3"
                    android:textColor="#ff656565"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



        <FrameLayout
            android:layout_above="@id/bottom_transfer_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:background="@drawable/shape_myasset_top_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/leftImg_ly"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/leftImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_arrow_left_white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_count_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="BTC/U"
                    android:textColor="@color/c_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="100dp"
                android:background="#00ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@mipmap/ic_myasset_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_risk_ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/countdetailact_item_percent_xx"
                        android:textColor="#ff656565"
                        android:textSize="11sp" />

                    <com.svv.jys.code.common.view.selfview.ProgressPercentView
                        android:id="@+id/itemPercent"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/countdetailact_item_type"
                                android:textSize="11sp" />

                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true">

                                <TextView
                                    android:id="@+id/tv_type1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/countdetailact_item_coin1"
                                    android:textSize="11sp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_type2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="@string/countdetailact_item_coin2"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/countdetailact_item_type1"
                                android:textSize="11sp" />

                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true">

                                <TextView
                                    android:id="@+id/tv_able1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="——"
                                    android:textColor="@color/c_text_thick"
                                    android:textSize="11sp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_able2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="——"
                                android:textColor="@color/c_text_thick"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/countdetailact_item_type2"
                                android:textSize="11sp" />

                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true">

                                <TextView
                                    android:id="@+id/tv_freeze1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="——"
                                    android:textColor="@color/c_text_thick"
                                    android:textSize="11sp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_freeze2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="——"
                                android:textColor="@color/c_text_thick"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/countdetailact_item_type3"
                                android:textSize="11sp" />

                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true">

                                <TextView
                                    android:id="@+id/tv_borrow1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="——"
                                    android:textColor="@color/c_text_thick"
                                    android:textSize="11sp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_borrow2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="——"
                                android:textColor="@color/c_text_thick"
                                android:textSize="11sp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/ic_myasset_bg"
                    android:orientation="vertical">
                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab_lt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        app:tabIndicatorHeight="2dp"
                        app:tabIndicatorColor="#ff2459e5"
                        app:tabSelectedTextColor="#ff2459e5"
                        app:tabTextAppearance="@style/TabLayoutStyle"
                        app:tabTextColor="#ff666666" />
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="@string/countdetailact_appeal"
                            android:textColor="#ff656565"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="9dp"
                                android:layout_height="12dp"
                                android:src="@mipmap/ic_order" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="26dp"
                                android:text="@string/countdetailact_appeal_all"
                                android:textColor="#ffc3c3c3"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <com.jcodecraeer.xrecyclerview.XRecyclerView
                        android:id="@+id/rvAppealNote"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <include
                        android:id="@+id/appealNoData_ly"
                        layout="@layout/include_nodata"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    style="@style/divider_line"
                    android:layout_marginTop="20dp" />

            </LinearLayout>

        </FrameLayout>
</RelativeLayout>

