<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_home_viper"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/market_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_1a456d"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/market_1_2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:textColor="@color/c_1a456d"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/market_1_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:lines="1"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/market_1_3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="?attr/hp_centerview_myassetitem_tc_1"
            android:textSize="11sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_home_viper2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/market_2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/market_2_2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:textColor="@color/c_ff5b4b"
            android:textSize="15sp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/market_2_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp" />



        <TextView
            android:visibility="gone"
            android:id="@+id/market_2_3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="?attr/hp_centerview_myassetitem_tc_1"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_home_viper3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/market_3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/market_3_2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:textColor="@color/c_ff5b4b"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/market_3_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:textStyle="bold"
            android:textColor="@color/c_1a456d"
            android:textSize="15sp" />



        <TextView
            android:visibility="gone"
            android:id="@+id/market_3_3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="?attr/hp_centerview_myassetitem_tc_1"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>
