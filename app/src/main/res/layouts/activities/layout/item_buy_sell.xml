<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/mf_item_bg">
    <View
        android:background="?attr/main_bg_color"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_adv_name"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="guyh"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="?attr/text_white_hei2"
                android:id="@+id/tv_adv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>
            <View
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="1px"
                android:layout_height="10dp"
                android:background="@color/c_b2b2b2"/>
            <TextView
                android:textColor="?attr/text_white_hei2"
                android:id="@+id/tv_adv_evaluation"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:id="@+id/tv_adv_num"
            android:layout_marginLeft="16dp"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:text="@string/price"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:id="@+id/tv_adv_limit"
            android:layout_marginLeft="16dp"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_adv_unit"
            android:textColor="#ff4969f2"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_adv_bank"
                android:layout_marginLeft="4dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/pay_unionpay_icon"/>
            <ImageView
                android:id="@+id/iv_adv_alipay"
                android:layout_marginLeft="4dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/pay_zhifubao_icon"/>
            <ImageView
                android:id="@+id/iv_adv_wechat"
                android:layout_marginLeft="4dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/pay_weichat_pay"/>
            <ImageView
                android:id="@+id/iv_adv_cash"
                android:layout_marginLeft="4dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/pay_fastpay_icon"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_adv_buy"
            android:textColor="@color/c_white"
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text="@string/assat39"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/shape_titlebar_gradient"/>
    </RelativeLayout>
</LinearLayout>
