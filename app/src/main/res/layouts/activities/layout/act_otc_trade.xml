<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/main_bg_color"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/fabi_title_bg">

        <RelativeLayout
            android:id="@+id/rl_otc_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_otc_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="@mipmap/ic_arrow_left_white"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true">

            <TextView
                android:background="?attr/fabi_title_buy"
                android:id="@+id/tv_otc_buy"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/assat39"
                android:textColor="@drawable/otc_buy_sell_textcolor"
                android:textSize="14sp"/>


            <TextView
                android:background="?attr/fabi_title_sell"
                android:id="@+id/tv_otc_sell"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/assat40"
                android:textColor="@drawable/otc_buy_sell_textcolor"
                android:textSize="14sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_otc_order"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="?attr/fabi_order"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/add_otc_order"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/rl_otc_order">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
               android:layout_centerInParent="true"
                android:background="?attr/fabi_add"/>
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_otc_trade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
