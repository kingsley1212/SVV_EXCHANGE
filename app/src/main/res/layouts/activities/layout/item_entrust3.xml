<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/c_white"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:visibility="gone"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@mipmap/coin1"/>
            <TextView
                android:id="@+id/tv_entrust_type"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:text="@string/countdetailact_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/buy_sell_type_selector"/>
            <TextView
                android:id="@+id/tv_market1"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:text="ETH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_2183c9"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/arrow"/>
            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@mipmap/coin2"/>
            <TextView
                android:id="@+id/tv_market2"
                android:textSize="13sp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:text="ETH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_2183c9"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/tv_entrust_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_9fb8cf"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/business_trade_yet"
            android:textColor="@color/c_white"
            android:textSize="13sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textSize="12sp"
                android:text="@string/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_8f9ba2"/>
            <TextView
                android:id="@+id/tv_entrust_time"
                android:textSize="12sp"
                android:text="05-25 18:22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_8f9ba2"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textSize="12sp"
                android:text="@string/coinbusinessfragment_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_8f9ba2"/>
            <TextView
                android:id="@+id/tv_entrust_price"
                android:textSize="12sp"
                android:text="05-25 18:22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_8f9ba2"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textSize="12sp"
                android:text="@string/coinbusinessfragment_type4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_8f9ba2"/>
            <TextView
                android:id="@+id/tv_entrust_num"
                android:textSize="12sp"
                android:text="05-25 18:22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_8f9ba2"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c_1a456d"
        android:textSize="12sp"
        android:text="商机"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View  android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1px"
        android:background="@color/line_color1"/>
</LinearLayout>
