<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_jys">
    <include layout="@layout/include_new_top_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="39dp"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/c_8f9ba2"
                android:text="@string/change_pwd_tv1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/new_pwd_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="25dp"
                    android:paddingBottom="12dp"
                    android:layout_weight="1"
                    android:background="@color/c_transparent"
                    android:hint="@string/login_inputpassword"
                    android:textSize="15sp"
                    android:textColorHint="@color/c_bbcce1"
                    android:textColor="@color/c_1a456d"
                    android:maxLength="12"
                    android:inputType="textPassword"/>
                <RelativeLayout
                    android:id="@+id/rl_new_eyes"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingRight="15dp"
                    android:paddingTop="25dp">
                    <ImageView
                        android:id="@+id/iv_new_eyes"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/selector_eyes"
                        android:layout_marginTop="3dp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="23dp"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/c_8f9ba2"
                android:text="@string/change_pwd_tv2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/sure_pwd_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp"
                    android:background="@color/c_transparent"
                    android:maxLength="12"
                    android:hint="@string/login_inputrepassword"
                    android:textSize="14sp"
                    android:textColorHint="@color/c_bbcce1"
                    android:inputType="textPassword"
                    android:textColor="@color/c_1a456d"/>
                <RelativeLayout
                    android:id="@+id/rl_sure_eyes"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingRight="15dp">
                    <ImageView
                        android:id="@+id/iv_sure_eyes"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/selector_eyes"
                        android:layout_marginTop="3dp"
                        />
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/commit_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_login_selector"
        android:gravity="center"
        android:text="@string/dialog_commit"
        android:layout_marginBottom="15dp"
        android:textColor="@color/c_ffffff" />



</LinearLayout>