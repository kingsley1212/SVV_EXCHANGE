<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/c_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_select_coin"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="@string/selltype_item0"
                    android:textColor="@color/c_1a456d"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_coin_name"
                    android:layout_toRightOf="@id/tv_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/c_8f9ba2"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_fabu_xiala"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_dcedfd"/>
            <RelativeLayout
                android:id="@+id/rl_select_country"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_suozaidi"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="@string/selltype_item1"
                    android:textColor="@color/c_1a456d"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_country"
                    android:layout_toRightOf="@id/tv_suozaidi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/c_8f9ba2"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_fabu_xiala"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_dcedfd"/>
            <RelativeLayout
                android:id="@+id/rl_select_huobi"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_jiaoyi_coin"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="@string/selltype_item2"
                    android:textColor="@color/c_1a456d"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_coin_unit"
                    android:layout_toRightOf="@id/tv_jiaoyi_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/c_8f9ba2"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_fabu_xiala"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_dcedfd"/>
            <RelativeLayout
                android:id="@+id/rl_payment"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_payment"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="@string/selltype_item8"
                    android:textColor="@color/c_1a456d"
                    android:textSize="14sp" />
                <TextView
                    android:text="@string/otc_please_zf_fangs"
                    android:id="@+id/tv_payment_name"
                    android:layout_toRightOf="@id/tv_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/c_8f9ba2"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_fabu_xiala"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_dcedfd"/>
            <RelativeLayout
                android:id="@+id/rl_select_jijia"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_jijia"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="@string/UserSetting_tv1"
                    android:textColor="@color/c_1a456d"
                    android:textSize="14sp" />
                <TextView
                    android:text="@string/otc_fs_act_tv1"
                    android:id="@+id/tv_jijia_fangshi"
                    android:layout_toRightOf="@id/tv_jijia"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/c_8f9ba2"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_fabu_xiala"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/c_6e7797"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="@string/jiaoyi_num"/>
        <LinearLayout
            android:background="@color/c_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="@string/otc_adv_num"
                    android:textColor="@color/c_1a456d"
                    android:textSize="14sp" />

                <EditText
                    android:maxLength="14"
                    android:id="@+id/et_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:hint="@string/otc_fabu_num"
                    android:inputType="numberSigned|numberDecimal"
                    android:textColor="@color/c_1a456d"
                    android:textColorHint="@color/c_8f9ba2"
                    android:textSize="14sp" />

            </LinearLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_dcedfd"/>
            <LinearLayout
                android:id="@+id/yj_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/c_1a456d"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="@string/otc_fs_act_tv1"
                    android:textSize="14sp" />
                <EditText
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/yijia_et"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColorHint="@color/c_8f9ba2"
                    android:textColor="@color/c_1a456d"
                    android:layout_height="match_parent"
                    android:hint="@string/otc_please_yj"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxLength="14"
                    android:textSize="13sp" />
                <TextView
                    android:textColor="@color/c_1a456d"
                    android:layout_marginRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="%"
                    android:textSize="14sp" />

            </LinearLayout>
            <View
                android:id="@+id/view_line"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_dcedfd"/>
            <LinearLayout
                android:id="@+id/ll_yijia_price"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/c_1a456d"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="@string/coinbusinessfragment_type3"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_price"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_8f9ba2"
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_price_unit"
                    android:textColor="@color/c_1a456d"
                    android:layout_marginRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="CNY"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_gu_price"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/c_1a456d"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/coinbusinessfragment_type3"
                    android:textSize="14sp" />
                <EditText
                    android:maxLength="14"
                    android:inputType="numberSigned|numberDecimal"
                    android:id="@+id/et_price"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_1a456d"
                    android:textColorHint="@color/c_8f9ba2"
                    android:background="@null"
                    android:hint="@string/otc_please_jg"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_gu_price_unit"
                    android:textColor="@color/c_1a456d"
                    android:layout_marginRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="CNY"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/c_6e7797"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="@string/otc_fabu_opponents_to_limit"/>
        <LinearLayout
            android:background="@color/c_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/c_1a456d"
                    android:layout_marginLeft="15dp"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/otc_fabu_single_limit"
                    android:textSize="14sp" />


                <EditText
                    android:maxLength="14"
                    android:textColor="@color/c_1a456d"
                    android:textColorHint="@color/c_8f9ba2"
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/low_price_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:inputType="numberSigned|numberDecimal"
                    android:textSize="14sp" />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/c_1a456d"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="â€”"
                    android:textSize="14sp" />
                <EditText
                    android:maxLength="14"
                    android:textColor="@color/c_1a456d"
                    android:textColorHint="@color/c_8f9ba2"
                    android:id="@+id/et_total_money"
                    android:layout_marginRight="15dp"
                    android:hint="@string/LookC2CDialogFragment_total"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:inputType="numberSigned|numberDecimal"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_total_unit"
                    android:textColor="@color/c_1a456d"
                    android:layout_marginRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="CNY"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_dcedfd"/>
            <RelativeLayout
                android:id="@+id/rl_select_time"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/tv_pay_qixian"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/buytypeads_item9"
                    android:textColor="@color/c_1a456d"
                    android:textSize="14sp" />
                <TextView
                    android:text="@string/otc_fabu_credit_period"
                    android:id="@+id/tv_pay_time"
                    android:layout_toRightOf="@id/tv_pay_qixian"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/c_8f9ba2"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_fabu_xiala"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_dcedfd"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="@string/otc_fabu_remark"
                    android:textColor="@color/c_1a456d"
                    android:textSize="14sp" />
                <EditText
                    android:textColor="@color/c_1a456d"
                    android:textColorHint="@color/c_8f9ba2"
                    android:layout_marginTop="15dp"
                    android:id="@+id/et_beizhu"
                    android:gravity="top"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:hint="@string/otc_fabu_remark_text"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/c_white"
            android:id="@+id/tv_fabu"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_universal"
            android:text="@string/otc_fabu_release"
            android:layout_width="200dp"
            android:layout_height="44dp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
