<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_jys"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/c_ffffff">

        <ImageView
            android:id="@+id/leftImg_ly"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_left"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/c_1a456d"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/c_1a456d"
            android:textSize="13sp"
            android:text="@string/c2c_bank"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/c_ffffff">
        <RelativeLayout
            android:id="@+id/sell_in_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tab1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tradechat_buy"
                android:textColor="@color/c_1ede89"
                android:textSize="17sp"
               android:layout_centerInParent="true"
                />
            <View
                android:id="@+id/tab_view_1"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@color/c_1ede89"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/buy_out_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tab2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tradechat_sell"
                android:textColor="@color/c_9fb8cf"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                />
            <View
                android:id="@+id/tab_view_2"
                android:layout_width="80dp"
                android:layout_centerHorizontal="true"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/c_ff5755"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/c2c_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">
                <LinearLayout
                    android:id="@+id/coin_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    >
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_1a456d"
                        android:text="@string/selltype_item0"
                        />
                    <TextView
                        android:id="@id/coin_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/c_8f9ba2"
                        android:text=""/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_drop_down"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <LinearLayout
                    android:id="@+id/bank_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_1a456d"
                        android:text="@string/c2c_tv4"
                        />
                    <TextView
                        android:id="@+id/bank_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/c_1a456d"
                        android:hint="@string/c2c_tv3"
                        android:textColorHint="@color/c_8f9ba2"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:id="@+id/buy_price_tv"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_1a456d"
                        android:text="@string/c2c_tv1"
                        />
                    <TextView
                        android:id="@+id/price_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/c_ff0000"
                        android:text="1"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:focusable="true"

                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/buy_num_tv"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_1a456d"
                        android:text="@string/c2c_tv2"
                        />
                    <EditText
                        android:maxLength="14"
                        android:id="@+id/buy_num_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/c_1a456d"
                        android:hint="@string/otc_fabu_num"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:textColorHint="@color/c_8f9ba2"
                        android:background="@color/c_transparent"
                        android:textSize="14sp"
                        android:inputType="numberSigned|numberDecimal"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"

                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/safe_tv"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_1a456d"
                        android:text="@string/address_psw"
                        />
                    <EditText
                        android:id="@+id/safe_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:textColor="@color/c_1a456d"
                        android:hint="@string/address_et_psw"
                        android:textColorHint="@color/c_8f9ba2"
                        android:background="@color/c_transparent"
                        android:textSize="14sp"
                        android:inputType="textPassword"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <!--android:background="@drawable/selector_fabi_buy_sell"-->
                <TextView
                    android:id="@+id/buy_btn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape_c2c_no_bg"
                    android:gravity="center"
                    android:text="@string/coinbusinessfragment_buy"
                    android:textColor="@color/c_ffffff"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/c_1a456d"
                        android:text="@string/C2CTradeAct_transaction_record"/>
                    <TextView
                        android:id="@+id/sm_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/c_1a456d"
                        android:text="@string/c2c_tv5"/>
                </LinearLayout>
                <include layout="@layout/include_nodata"
                    android:id="@+id/no_data"/>
                <com.jcodecraeer.xrecyclerview.XRecyclerView
                    android:id="@+id/transfer_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                </com.jcodecraeer.xrecyclerview.XRecyclerView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>