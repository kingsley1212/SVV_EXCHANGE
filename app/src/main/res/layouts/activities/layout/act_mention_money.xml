<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_jys"
    android:orientation="vertical">

    <include layout="@layout/include_new_top_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/coins_ll"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/coin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c_1a456d"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/selltype_item0"
                    android:textColor="@color/c_8f9ba2"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/ic_right_more" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="@string/myselffragment_item6"
                android:textColor="@color/c_8f9ba2"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_mention_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/assat36"
                    android:textColor="@color/c_1a456d"
                    android:textColorHint="@color/c_bbcce1"
                    android:maxLines="2"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_mention_code"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="7dp"
                    android:src="@mipmap/ercode" />

                <View
                    android:layout_width="1px"
                    android:layout_height="19dp"
                    android:layout_marginRight="7dp"
                    android:background="@color/c_bbcce1" />

                <ImageView
                    android:id="@+id/iv_mention_address"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/address" />

            </LinearLayout>
            <View
                style="@style/divider_line"
                android:layout_alignParentBottom="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="@string/asset2"
                android:textColor="@color/c_8f9ba2"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_mention_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/assat28"
                    android:inputType="numberDecimal|number"
                    android:textColor="@color/c_1a456d"
                    android:textColorHint="@color/c_bbcce1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/coin_2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_bbcce1"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="19dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:background="@color/c_bbcce1" />


                <TextView
                    android:id="@+id/all_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all"
                    android:textColor="@color/c_1a456d"
                    android:textSize="12sp" />
            </LinearLayout>

            <View style="@style/divider_line" />

            <TextView
                android:id="@+id/tv_mention_able"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/myassetact_tv3"
                android:textColor="@color/c_8f9ba2"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="35dp"
                android:text="@string/assat21"
                android:textColor="@color/c_8f9ba2"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mention_sfx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="0.00"
                    android:textColor="@color/c_1a456d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/coin_3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_bbcce1"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                style="@style/divider_line"
                android:layout_marginBottom="20dp" />
            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/tv_tishi"
                android:textSize="12sp"
                android:textColor="@color/c_8f9ba2"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ffffff"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assat37"
                android:textColor="@color/c_8f9ba2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_mention_reality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/c_1a456d"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_mention_commit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/btn_login_selector"
            android:gravity="center"
            android:text="@string/dialog_commit"
            android:textColor="@color/c_ffffff" />
    </LinearLayout>
</LinearLayout>
