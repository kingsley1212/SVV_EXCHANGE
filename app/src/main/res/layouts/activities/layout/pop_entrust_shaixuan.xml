<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pop_touming"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/pop_entrust_jiaoyiduoi"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_coin"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_money"
                android:hint="@string/myassetact_list_item1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"/>
            <RelativeLayout
                android:id="@+id/rl_market"
                android:background="@drawable/shape_money"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_market_select"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="@string/pop_entrust_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/selector_san"/>
            </RelativeLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:overScrollMode="never"
            android:scrollbars="none"
            android:id="@+id/rv_order_entrust"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/pop_entrust_order_status"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_type_buy"
                android:background="@drawable/select_order_entrust"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:textSize="13sp"
                android:text="@string/coinbusinessfragment_buy"
                android:layout_width="100dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_type_sell"
                android:background="@drawable/select_order_entrust"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="13sp"
                android:text="@string/coinbusinessfragment_sell"
                android:layout_width="100dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_chongzhi"
                android:background="@color/c_ebebeb"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/pop_entrust_zhongzhi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:textColor="@color/c_white"
                android:id="@+id/tv_queren"
                android:background="@color/colorPrimary"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/pop_entrust_queren"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl">

    </RelativeLayout>
</LinearLayout>
