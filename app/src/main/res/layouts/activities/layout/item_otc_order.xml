<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/mf_item_bg">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:layout_marginLeft="16dp"
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="@string/otc_order_type"/>
        <TextView
            android:gravity="center"
            android:background="@drawable/selector_entrust_state"
            android:id="@+id/tv_order_type"
            android:textSize="13sp"
            android:textColor="@color/c_white"
            android:layout_toRightOf="@id/tv1"
            android:layout_width="40dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginRight="16dp"
            android:id="@+id/tv_order_status"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:textColor="?attr/text_white_hei2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王强"/>
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:layout_toLeftOf="@id/tv_order_status"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otc_order_status"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:layout_marginLeft="16dp"
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/otc_order_on"/>
        <TextView
            android:id="@+id/tv_order_code"
            android:textSize="12sp"
            android:textColor="?attr/text_white_hei2"
            android:layout_toRightOf="@id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:layout_marginRight="16dp"
            android:id="@+id/tv_object_name"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="?attr/text_white_hei2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王强"/>
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:layout_toLeftOf="@id/tv_object_name"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otc_order_jiaoyi_dx"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:id="@+id/tv_price"
            android:layout_marginLeft="16dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价：10.00"/>
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:id="@+id/tv_num"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量：10"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:id="@+id/tv_time"
            android:layout_marginLeft="16dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间：2018-10-10"/>
        <TextView
            android:textColor="?attr/text_white_hei2"
            android:id="@+id/tv_total"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总价：10"/>
    </RelativeLayout>

    <View style="@style/divider_line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
</LinearLayout>
