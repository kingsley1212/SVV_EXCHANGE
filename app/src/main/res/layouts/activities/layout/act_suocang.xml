<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/include_top_title_bar"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_cunfang_record"
            android:layout_marginRight="4dp"
            android:textSize="14sp"
            android:textColor="@color/c_1a456d"
            android:gravity="center"
            android:text="@string/record"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="@color/c_1a456d"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="@string/suocang_coin"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_cunfang_coin"
            android:textColor="@color/c_1a456d"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="@string/suocang_num"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/c_1a456d"/>
        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/et_cunfang_num"
            android:background="@null"
            android:textColorHint="@color/c_bbcce1"
            android:textColor="@color/c_1a456d"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:hint="@string/suocang_tv1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="@string/zhouqi"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/c_1a456d"/>
        <TextView
            android:id="@+id/tv_cunfang_time"
            android:textColor="@color/c_1a456d"
            android:gravity="center_vertical"
            android:textColorHint="@color/c_bbcce1"
            android:textSize="15sp"
            android:hint="@string/suocang_zhouqi"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="@string/suocang_tv2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/c_1a456d"/>
        <TextView
            android:id="@+id/tv_getlixi"
            android:textColor="@color/c_1a456d"
            android:gravity="center_vertical"
            android:textColorHint="@color/c_bbcce1"
            android:textSize="15sp"
            android:hint="0.00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="@string/suocang_tv3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/c_1a456d"/>
        <TextView
            android:id="@+id/tv_getEvery"
            android:textColor="@color/c_1a456d"
            android:gravity="center_vertical"
            android:textColorHint="@color/c_bbcce1"
            android:textSize="15sp"
            android:hint="0.00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:background="@drawable/btn_universal"
        android:id="@+id/tv_confir_cunfang"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/c_ffffff"
        android:text="@string/confirm_suocang"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="117dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
