<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_top_title_bar" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <EditText
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:id="@+id/right_mobile_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="@string/forgetpsw8"
                android:textColor="@color/main_little_title"
                android:textColorHint="@color/thin_tx"
                android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/c_dcedfd" />
        <RelativeLayout
            style="@style/item_style"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:visibility="gone">

            <View
                style="@style/divider_line"
                android:layout_alignParentBottom="true" />

            <EditText
                android:id="@+id/et_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="@string/forgetpsw9"
                android:textColor="?attr/mt_title_tc"
                android:textColorHint="@color/c_d5d5d5"
                android:textSize="14sp"
                />
        </RelativeLayout>


        <TextView
            android:layout_marginBottom="30dp"
            android:id="@+id/rightCommit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_btn_bg"
            android:gravity="center"
            android:text="@string/complete"
            android:textColor="@color/c_white" />
    </LinearLayout>
</LinearLayout>
