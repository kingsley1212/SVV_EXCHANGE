<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/include_top_title_bar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp" />
        <LinearLayout
            android:paddingBottom="30dp"
            android:background="?attr/mt_title_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_rengou_wenzi"
                android:textColor="@color/c_1a456d"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="31dp"
                android:text="请输入认购数量:"/>
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/et_rengou_num"
                android:textColor="@color/c_1a456d"
                android:textColorHint="@color/c_8f9ba2"
                android:paddingLeft="31dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="20dp"
                android:background="?attr/linecolor_2"/>
            <LinearLayout
                android:layout_marginTop="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="31dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/c_1a456d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/suog_tv1"/>
                <TextView
                    android:id="@+id/tv_rengou_sxf"
                    android:textColor="@color/c_1a456d"
                    android:layout_marginLeft="65dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="0.00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginLeft="31dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/c_1a456d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/suog_tv2"/>
                <TextView
                    android:id="@+id/tv_rengou_total"
                    android:textColor="@color/c_1a456d"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="0.00"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_rengou_commit"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_universal"
            android:text="提交认购申请"
            android:textSize="18sp"
            android:textColor="@color/c_white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp" />
    </LinearLayout>

   <LinearLayout
        android:elevation="4dp"
       android:background="@drawable/shape_rengou_white"
       android:layout_marginTop="57dp"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:layout_marginRight="20dp"
       android:layout_marginLeft="20dp"
       android:orientation="vertical">
        <TextView
            android:id="@+id/tv_rengou_coin"
            android:textColor="@color/c_1a456d"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/tv_rengou_price"
           android:textColor="@color/c_1a456d"
           android:layout_marginLeft="21dp"
           android:text="认购价格(USDT)"
           android:layout_marginTop="10dp"
           android:textSize="16sp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/rengou_price"
           android:textColor="@color/c_1a456d"
           android:layout_marginRight="21dp"
           android:gravity="right"
           android:text="100000"
           android:layout_marginTop="10dp"
           android:textSize="16sp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
   </LinearLayout>
</FrameLayout>
