<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg_color"
    android:orientation="vertical">
    <include layout="@layout/include_top_title_bar"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="?attr/mf_item_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/mf_item_tc"
            android:layout_marginLeft="15dp"
           android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_verify"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_phone_verify"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:src="?attr/kai_guan"
            android:layout_width="60dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="?attr/mf_item_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/mf_item_tc"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_verify"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_email_verify"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:src="?attr/kai_guan"
            android:layout_width="60dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="?attr/mf_item_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/mf_item_tc"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/google_verify"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_google_verify"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:src="?attr/kai_guan"
            android:layout_width="60dp"
            android:layout_height="30dp" />
    </RelativeLayout>
</LinearLayout>
