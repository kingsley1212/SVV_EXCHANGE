<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/coin_name_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:textSize="16sp"
        android:textColor="@color/c_1a456d"
        android:gravity="center_vertical"
        android:text=""/>
    <View
        android:background="@color/line_color1"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_8f9ba2"
            android:text="@string/tradechat_tv4"
            />
        <TextView
           android:gravity="right"
            android:id="@+id/issue_date_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/c_1a456d"/>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:background="@color/line_color1"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_8f9ba2"
            android:text="@string/tradechat_tv5"
            />
        <TextView
            android:gravity="right"
            android:id="@+id/website_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/c_1a456d"/>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:background="@color/line_color1"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_8f9ba2"
            android:text="@string/tradechat_tv6"
            />
        <TextView
            android:gravity="right"
            android:id="@+id/book_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/c_1a456d"/>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:background="@color/line_color1"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_8f9ba2"
            android:text="@string/tradechat_tv7"
            />
        <TextView
            android:gravity="right"
            android:id="@+id/block_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/c_1a456d"/>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:background="@color/line_color1"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/c_1a456d"
        android:layout_marginLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/tradechat_introduction"
        />
    <TextView
        android:id="@+id/detail_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/c_1a456d"/>
</LinearLayout>