<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white"
    android:orientation="vertical"
    android:paddingBottom="15dp">
    <TextView
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pop_shenshu"
        android:gravity="center"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:text="@string/pop_shenshu_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/tv_shenshu1"
            android:gravity="center"
            android:background="@drawable/selector_screen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textColor="@drawable/text_selector_screen"
            android:textSize="13sp"
            android:text="@string/pop_shenshu_shuoming"/>
        <TextView
            android:id="@+id/tv_shenshu2"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/select_order_entrust"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textSize="13sp"
            android:text="@string/pop_shenshu_shuoming1"
            android:visibility="gone"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_shenshu"
        android:layout_marginTop="10dp"
        android:background="@color/c_white"
        android:layout_marginLeft="16dp"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pop_shenshu_yuanying"/>
    <TextView
        android:id="@+id/tv_shenshu_queren"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/pop_shenshu_queren"
        android:gravity="center"/>
</LinearLayout>
