<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/include_top_title_bar"
        android:id="@+id/view_transfer2"/>
    <LinearLayout
        android:layout_below="@id/view_transfer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            app:tabIndicatorColor="?attr/tab_select"
            android:background="?attr/mt_item_bg"
            app:tabSelectedTextColor="?attr/mt_title_tab_tc_s"
            app:tabTextAppearance="@style/TabLayoutStyle"
            app:tabTextColor="?attr/mt_title_tab_tc_uns"
            android:id="@+id/tab_market3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabIndicatorHeight="2dp"
            />
        <HorizontalScrollView
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:id="@+id/ll_otc_transfer_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:paddingTop="10dp"
            android:background="?attr/mf_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="?attr/text_white_hei2"
                    android:id="@+id/tv_otc_jiaoyi"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myassetact_tab2"/>
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_otc_huhuan"
                    android:layout_marginRight="16dp"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="?attr/huhuan_pic" />
                <TextView
                    android:textColor="?attr/text_white_hei2"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_otc"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myassetact_tab3"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:text="@string/num"
                android:textColor="?attr/text_white_hei2"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/et_otc_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:inputType="numberDecimal|number"
                    android:textColor="?attr/mt_title_tc"
                    android:textColorHint="@color/c_d5d5d5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_alltransfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="@string/countdetailact_appeal_all"
                    android:textColor="#4b8efa"
                    android:textSize="13sp" />
            </RelativeLayout>


            <View
                style="@style/divider_line"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:text="@string/popupBusinessSubmit_tx4"
                android:textColor="?attr/text_white_hei2"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_otc_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="@string/safepsw6"
                android:inputType="textPassword"
                android:textColor="?attr/mt_title_tc"
                android:textColorHint="@color/c_d5d5d5"
                android:textSize="12sp" />
            <View
                style="@style/divider_line"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>





    <TextView

        android:id="@+id/tv_otc_comfir"
        android:layout_marginBottom="15dp"
        android:background="?attr/btn_bg"
        android:textColor="@color/c_white"
        android:layout_alignParentBottom="true"
        android:text="@string/assat4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp" />


</RelativeLayout>
