<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/c_white"
    android:layout_height="match_parent">
    <include layout="@layout/include_top_title_bar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_bank_zhuangzhang"
        android:textSize="24sp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c_1a456d"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myaddressact_item1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c_8f9ba2"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/et_pay_name"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColorHint="@color/c_bbcce1"
        android:textColor="@color/c_1a456d"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="@string/add_pay_name"
        android:textSize="16sp"/>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_dcedfd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddPayAct_add_bank"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c_8f9ba2"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/et_bank_zhanghao"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColorHint="@color/c_bbcce1"
        android:textColor="@color/c_1a456d"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="@string/AddPayAct_input_bank_hao"
        android:textSize="16sp"/>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_dcedfd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addpay_kai_bank"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c_8f9ba2"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/et_bank_bank"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColorHint="@color/c_bbcce1"
        android:textColor="@color/c_1a456d"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="@string/addpay_kai_et_bank"
        android:textSize="16sp"/>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_dcedfd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kaihu_address"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/c_8f9ba2"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/et_bank_address"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColorHint="@color/c_bbcce1"
        android:textColor="@color/c_1a456d"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="@string/et_kaihu_address"
        android:textSize="16sp"/>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_dcedfd"/>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/btn_universal"
            android:gravity="center"
            android:text="@string/add_pay"
            android:textColor="@color/c_ffffff" />
    </LinearLayout>

</LinearLayout>
