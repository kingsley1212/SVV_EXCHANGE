<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            android:useLevel="false" >
            <solid android:color="@color/c_999999" />
            <padding
                android:left="2dp"
                android:top="1dp"
                android:right="2dp"
                android:bottom="1dp" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white" />
            <size android:width="15dp"
                  android:height="15dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            android:useLevel="false" >
            <solid android:color="@color/c_02cb66" />
            <padding
                android:left="2dp"
                android:top="1dp"
                android:right="2dp"
                android:bottom="1dp" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white" />
            <size android:width="15dp"
                  android:height="15dp" />
        </shape>
    </item>
</selector>
