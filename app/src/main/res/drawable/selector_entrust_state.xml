<?xml version="1.0" encoding="utf-8"?>
<!--行情页的 上涨下跌效果-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true">
        <!--下跌状态块效果-->
        <shape>
            <gradient
                android:startColor="#ffff595d" android:endColor="#ffff683f"></gradient>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item
        android:state_selected="false">
        <!--上涨状态块效果-->
        <shape>
            <gradient
                android:startColor="#ff01cb8f" android:endColor="#ff00c674"></gradient>
            <corners android:radius="3dp"/>
        </shape>
    </item>

</selector>